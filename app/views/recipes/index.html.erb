<h1><%="Welcome #{current_user.name} to your Recipes"%></h1>
<%= render '/shared/navbar'%>
<div class = 'container'>

     <button class = 'btn_add_recipe'><%= link_to 'Add Recipe', new_recipe_path %></button>

<% @recipes.each do |recipe|%>
<div class = 'recipe_container'>
<div class = 'recipe_heading'>
<%= link_to recipe.name, recipe_path(recipe.id) %>
<div class = 'btn_recipe_remove'>
<%if current_user.present?%>
<% if can? :destroy, recipe%>
      <%= button_to "Delete", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" } %>
    <%end%>
    <%end%>
</div>

</div>
<div class = 'recipe_text'>
<p><%= recipe.description %></p>
<div>
<%end%>
</div>

</div>