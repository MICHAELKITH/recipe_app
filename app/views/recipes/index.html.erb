<h1><%="Welcome #{current_user.name} to your Recipes"%></h1>
<%= render '/shared/navbar'%>
<div class="container"style="width: 800px; margin-top: 20px;">
<% @recipes.each do |recipe| %>
  <div class="card mb-3">
    <div class="card-header d-flex justify-content-between align-items-center">
      <%= link_to recipe.name, recipe_path(recipe.id) %>
      
    </div>
    <div class="row g-0">
      <div class="col-md-8">
        <div class="card-body">
        <% if current_user.present? && can?(:destroy, recipe) %>
        <%= button_to "Remove", recipe_path(recipe.id), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm ml-2' %>
      <% end %>
          
        </div>
      </div>
      <div class="col-md-4 d-flex align-items-center justify-content-center">
        <p class="card-text" style="margin-right: 10px;"><%= recipe.description %></p>
      </div>
    </div>
  </div>
<% end %>

  <button class="btn_add_recipe btn btn-primary">
    <%= link_to 'Add Recipe', new_recipe_path, class: "text-white" %>
  </button>
</div>