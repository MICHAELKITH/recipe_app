<div>
<%= render '/shared/navbar'%>
</div>

<div class="container mt-4">
  <div class="new_recipe">
    <h2 style='text-align: center; margin-top: 20px;'>Create New Recipe</h2>
    <div class="back_to_recipe" style='display: flex; justify-content: center; align-items: center;'>
      <%= link_to 'Back to Recipes', recipes_path %>
    </div>
    <div class="add_new_recipe">
      <%= form_with model: @recipe do |form| %>
        <div class="form-group">
          <%= form.label :name %>
          <div class="new_recipe_name">
            <%= form.text_field :name, class: "form-control mb-3 mt-1" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :preparation_time %>
          <div class="recipe_prep_time">
            <%= form.number_field :preparation_time, class: "form-control mb-3 mt-1" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :cooking_time %>
          <div class="cooking_time">
            <%= form.number_field :cooking_time, class: "form-control mb-3 mt-1" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <div class="description">
            <%= form.text_area :description, class: "form-control mb-3 mt-1" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :public %>
          <div class="public mb-3 mt-1">
            <%= form.select :public, options_for_select([[ 'Yes', true ], [ 'No', false ]]), class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.submit class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
