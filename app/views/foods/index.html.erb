<%= render '/shared/navbar'%>
<div class="mt-40 ">
  <div class="mt-3" style="display: flex; justify-content: flex-end; margin-right: 20px;">
  <button class = 'add-food'><%= link_to 'Add Food', new_food_path%></button>
  </div>
  <table class="m-auto border border-slate-500 ">
    <thead>
      <tr class="bg-blue-500 flex flex-col flex-no wrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
        <th scope='col'> Food </th>
        <th> Measurement Unit </th>
        <th> Price </th>
        <th> Actions </th>
      </tr>
    </thead>
    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <td>
            <%= food.name %>
            </td>
        <td>
            <%=food.measurement_unit%>
        </td>
            <td>
            <%= "$#{food.price.to_i}"%>
            </td>
        
          <td><%= button_to "Delete", food_path(food.id), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
        
      <% end %>

    </tbody>
  </table>
</div>