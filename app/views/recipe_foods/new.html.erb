<%= render '/shared/navbar'%>
<h2 style='text-align: center; margin-top: 20px;'>Add Ingredients</h2>
<div class="add_new_ingredient"  style='display: flex; justify-content: center; align-items: center;'>
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), method: :post, local: true do |form| %>
    <div class="form-group">
      <%= form.label :food_id %>
      <%= form.select :food_id, current_user.foods.all.map { |food| [food.name, food.id] }, {}, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Add", class: "btn btn-primary mt-4" %>
    </div>
  <% end %>
</div>